<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/p04_ic_user" />

                <EditText
                    android:id="@+id/edt_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="@string/signup2_hint_enter_nickname"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="9dp"
                    android:textColor="@color/grayText"
                    android:textColorHint="@color/grayText"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/p04_ic_genders" />

                <Button
                    android:id="@+id/btn_gender"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/signup2_hint_enter_gender"
                    android:maxLines="1"
                    android:padding="9dp"
                    android:textColor="@color/grayText"
                    android:textColorHint="@color/grayText"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/p04_ic_date" />

                <Button
                    android:id="@+id/btn_birth"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/signup2_hint_enter_date"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="9dp"
                    android:textColor="@color/grayText"
                    android:textColorHint="@color/grayText"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/p04_ic_placeholder" />

                <Button
                    android:id="@+id/btn_location"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/signup2_hint_enter_place"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="9dp"
                    android:textColor="@color/grayText"
                    android:textColorHint="@color/grayText"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/rl_connect_insta"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/iv_insta"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/p04_ic_insta" />

                <TextView
                    android:id="@+id/tv_insta"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_insta"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:padding="9dp"
                    android:text="@string/signup2_action_connect_insta"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/account_signup_insta_help"
                android:textColor="#536dfe"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_round_rectangle_fill_black"
                android:text="가입하기"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

