<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainBlack</item>
        <item name="colorPrimaryDark">@color/mainBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FloatingButtonTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="colorPrimaryDark">#bdbdbd</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainBlack</item>
        <item name="colorPrimaryDark">@color/mainBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="CustomActionBarTheme" parent="AppTheme">
        <item name="android:logo">@drawable/p06_img_toplogo</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>


    <style name="WhiteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <!-- DALPING STYLES - 추후 수정-->
    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="windowActionBarOverlay">true</item>-->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar.Transparent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom Dialog-->
    <style name="CustomDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <!-- Custom Style -->
    <style name="DividerGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="DividerDarkGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#757575</item>
    </style>

    <style name="CstRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/deactivation</item>
        <item name="colorControlActivated">@color/colorMainTeal</item>
    </style>

    <style name="CstSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorMainTeal</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorMainTeal</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/grayBack</item>
    </style>

</resources>
